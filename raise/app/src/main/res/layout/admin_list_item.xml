<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:layout_marginTop="20dp"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ivAdmin"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/ivAdmin"
        android:layout_centerVertical="true">



        <LinearLayout
            android:id="@+id/firstLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_goods"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/goods"/>

            <TextView
                android:id="@+id/txtGName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="物资"
                android:textColor="#8e8e8e"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtGoodsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="----"
                android:textColor="#333333"
                android:textSize="15sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/secondLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/firstLine"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivLocation"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/location"/>

            <TextView
                android:id="@+id/txtLtion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="地址"
                android:textColor="#8e8e8e"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="----"
                android:textColor="#333333"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/thirdLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/secondLine"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivPrg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/progress"/>

            <TextView
                android:id="@+id/txtPrg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="进度"
                android:textColor="#8e8e8e"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp">

                <ImageView
                    android:id="@+id/ivProgress"
                    android:layout_width="160dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="12dp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/progress_bg"/>

                <ImageView
                    android:id="@+id/ivProgressing"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="12dp"
                    android:layout_centerVertical="true"
                    android:background="#2f963f"/>

                <TextView
                    android:id="@+id/txtTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivProgress"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="3dp"
                    android:text="--/--"
                    android:textColor="#8e8e8e"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/txtProgressing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivProgress"
                    android:layout_marginTop="3dp"
                    android:gravity="right"
                    android:text="--%"
                    android:textColor="#8e8e8e"
                    android:textSize="8sp" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>